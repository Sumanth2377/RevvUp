/**
 * @fileOverview Firestore Security Rules for Mech.io Application
 *
 * Core Philosophy: This ruleset enforces a strict user-ownership model. Each user has complete control over their own data, including their profile, vehicles, maintenance tasks, service history, and notifications. No cross-user access is permitted except where explicitly defined.
 *
 * Data Structure: All data is nested under /users/{userId}, ensuring clear ownership.  Vehicles are stored in /users/{userId}/vehicles/{vehicleId}, maintenance tasks in /users/{userId}/vehicles/{vehicleId}/maintenanceTasks/{taskId}, service history in /users/{userId}/vehicles/{vehicleId}/maintenanceTasks/{taskId}/serviceHistory/{historyId}, and notifications in /users/{userId}/notifications/{notificationId}.
 *
 * Key Security Decisions:
 *  - Users can only access their own data.
 *  - Listing other users is disallowed.
 *  - Data validation is relaxed to allow rapid prototyping. Only ownership and relational integrity are validated.
 *
 * Denormalization for Authorization:
 *  - The userId is embedded in the path for all user-owned data, enabling path-based authorization and eliminating the need for extra reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) - User with ID 'user123' can create their profile when authenticated as 'user123'.
     * @allow (get, update, delete) - User with ID 'user123' can read, update, and delete their profile when authenticated as 'user123'.
     * @deny (create) - User with ID 'user456' cannot create a profile for 'user123'.
     * @deny (get, update, delete) - User with ID 'user456' cannot read, update, or delete the profile for 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing of all users

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id; //Enforce immutability
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to vehicle data for a specific user.
     * @path /users/{userId}/vehicles/{vehicleId}
     * @allow (create, get, list, update, delete) - User with ID 'user123' can manage their vehicles when authenticated as 'user123'.
     * @deny (create, get, list, update, delete) - User with ID 'user456' cannot manage vehicles for 'user123'.
     * @principle Enforces document ownership for all operations within a user's vehicle collection.
     */
    match /users/{userId}/vehicles/{vehicleId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId; //Enforce immutability
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to maintenance tasks for a specific vehicle.
     * @path /users/{userId}/vehicles/{vehicleId}/maintenanceTasks/{taskId}
     * @allow (create, get, list, update, delete) - User with ID 'user123' can manage maintenance tasks for their vehicle 'vehicle456' when authenticated as 'user123'.
     * @deny (create, get, list, update, delete) - User with ID 'user456' cannot manage maintenance tasks for vehicle 'vehicle456' owned by 'user123'.
     * @principle Enforces document ownership for all operations within a vehicle's maintenance task collection.
     */
    match /users/{userId}/vehicles/{vehicleId}/maintenanceTasks/{taskId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && get(/databases/$(database)/documents/users/$(userId)/vehicles/$(vehicleId)).data.userId == userId && request.resource.data.vehicleId == vehicleId;
      allow update: if isExistingOwner(userId) && get(/databases/$(database)/documents/users/$(userId)/vehicles/$(vehicleId)).data.userId == userId && resource.data.vehicleId == vehicleId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to service history records for a specific maintenance task.
     * @path /users/{userId}/vehicles/{vehicleId}/maintenanceTasks/{taskId}/serviceHistory/{historyId}
     * @allow (create, get, list, update, delete) - User with ID 'user123' can manage service history for a maintenance task of their vehicle when authenticated as 'user123'.
     * @deny (create, get, list, update, delete) - User with ID 'user456' cannot manage service history for a maintenance task of a vehicle owned by 'user123'.
     * @principle Enforces document ownership for all operations within a maintenance task's service history collection.
     */
    match /users/{userId}/vehicles/{vehicleId}/maintenanceTasks/{taskId}/serviceHistory/{historyId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && get(/databases/$(database)/documents/users/$(userId)/vehicles/$(vehicleId)/maintenanceTasks/$(taskId)).data.vehicleId == vehicleId && request.resource.data.maintenanceTaskId == taskId;
      allow update: if isExistingOwner(userId) && get(/databases/$(database)/documents/users/$(userId)/vehicles/$(vehicleId)/maintenanceTasks/$(taskId)).data.vehicleId == vehicleId && resource.data.maintenanceTaskId == taskId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to notifications for a specific user.
     * @path /users/{userId}/notifications/{notificationId}
     * @allow (create, get, list, update, delete) - User with ID 'user123' can manage their notifications when authenticated as 'user123'.
     * @deny (create, get, list, update, delete) - User with ID 'user456' cannot manage notifications for 'user123'.
     * @principle Enforces document ownership for all operations within a user's notifications collection.
     */
    match /users/{userId}/notifications/{notificationId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}
